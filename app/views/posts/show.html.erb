<div class='main-div'>
    <div class='div'>
            <p>Post #<%= @user.id%> By <%= @user.author.name %></p>
            <p>
                 <%= @user.title %>
            </p>
            <p><%= @user.text %></p>
            <p>
                <span>comments: <%= @user.comments_counter %></span>, 
                <span>Likes: <%= @user.likes_counter %> </span>
            </p>
    </div>

    <ul>
          <div>
            <% @comment.each do |item| %>
               <p>User : <%= item.author.name %></p>
               <p><%= item.text %></p>
             <% end %>
          </div>
    </ul>
</div>

