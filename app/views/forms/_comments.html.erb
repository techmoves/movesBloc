<%= form_with(model: [locals[:comment], locals[:comment].current_user.comments.build],
              url: user_post_comments_path(locals[:comment].current_user, locals[:post_id])) do |form| %>
  <%= form.text_area :text, size: "80x5", placeholder: 'Type your comments here!' %>
  <%= form.submit 'Publish', size: "40x5", class: 'publish-button' %>
<% end %>
