<%= form_with( model: locals[:comment].current_user.comments , 
url: "/users/#{locals[:comment].current_user.id}/posts/#{locals[:post_id]}/comments") do |form| %>
  <%= form.text_area :text , size:"80*5" , placeholder: 'Type your text here!'%>
  <%= form.submit :Publish , size:"40*5", class: "publish-button" %>
<%end%>